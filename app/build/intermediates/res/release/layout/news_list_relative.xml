<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_round" >

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circular_progressbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/mycolors"
        app:cpb_rotation_speed="3.0"
        app:cpb_sweep_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_min_sweep_angle="10"
        app:cpb_max_sweep_angle="300"
        />

    <ImageView 
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    
    <TextView 
        android:id="@+id/news_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:alpha="1"
        android:textColor="#ff0000"
        android:text="不好意思,第一次启动会慢一点"
        android:layout_marginLeft="140sp"
        android:layout_marginRight="12sp"
        android:layout_marginBottom="20sp"
        />
    
    <TextView 
        android:id="@+id/home_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:alpha="1"
        android:gravity="left"
        android:text="情绪指数"
        android:textSize="16sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:textColor="#ff0000"
        />
    
    <LinearLayout
        android:id="@+id/youmi_ad"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:orientation="vertical"
        android:alpha="1"
        android:layout_alignParentBottom="true" >
    </LinearLayout>

</RelativeLayout>
